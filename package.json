{
  "name": "eyes-on-claude-code",
  "version": "0.0.5",
  "description": "A menubar app to monitor your Claude Code sessions, view git changes, and get notifications for permission prompts",
  "keywords": [
    "claude",
    "claude-code",
    "tauri",
    "menubar",
    "session-manager"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/joe-re/eyes-on-claude-code.git"
  },
  "bugs": "https://github.com/joe-re/eyes-on-claude-code/issues",
  "homepage": "https://github.com/joe-re/eyes-on-claude-code",
  "author": "joe-re",
  "license": "MIT",
  "type": "module",
  "packageManager": "pnpm@10.27.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "lint": "pnpm lint:ts && pnpm lint:rust",
    "lint:ts": "eslint .",
    "lint:ts:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "lint:rust": "cargo fmt --check --manifest-path src-tauri/Cargo.toml && cargo clippy --manifest-path src-tauri/Cargo.toml -- -D warnings",
    "lint:rust:fix": "cargo fmt --manifest-path src-tauri/Cargo.toml",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "licenses:audit": "node scripts/audit-licenses.mjs"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/cli": "^2.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.0.0"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0",
    "ansi_up": "^6.0.6",
    "difit": "^2.2.7",
    "open": "^11.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
